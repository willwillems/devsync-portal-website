{
  "name": "portal-website",
  "version": "1.0.0",
  "description": "Website for Devsync&#39;s portal",
  "author": "Will Willems",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "npm run build-app && nuxt build",
    "start": "npm run build-app && nuxt start",
    "generate": "npm run build-app && nuxt generate",
    "build-app": "cd app && npm i && npm run build && mv -f dist ../static/demo",
    "postinstall": "git submodule init && git submodule update"
  },
  "dependencies": {
    "nuxt": "^2.15.8"
  },
  "devDependencies": {
    "@nuxtjs/tailwindcss": "^1.0.0",
    "postcss-nested": "^4.2.1"
  }
}
